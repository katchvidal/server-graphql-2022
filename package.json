    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/graphql": "^14.5.0",
    "@types/graphql-upload": "^8.0.11",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/mongodb": "^4.0.7",
    "@types/node": "^17.0.35",
    "@types/nodemailer": "^6.4.4",
    "nodemon": "^2.0.16",
    "ts-node": "^10.8.0",
    "typescript-tslint-plugin": "^1.0.2",
    "vercel": "^25.0.0"
  },
