{
  "name": "backend-graphql-2022",
  "version": "0.2.0",
  "description": "servidor para aplicaciones web lo mas robuesto posible hecho con graphql, typescript, node, express y apollo server",
  "main": "build/server.js",
  "author": "Ing katch vidal",
  "scripts": {
    "start": "node build/server.js",
    "build": "tsc -p . && ncp src/schemas build/schemas",
    "dev": "nodemon \"src/server.ts\" --exec \"ts-node\" \"src/server.ts\" -e ts,graphql,json",
    "publish": "npm run build && npx vercel --prod "
  },
  "license": "MIT",
  "private": true,
  "dependencies": {
    "apollo-server-express": "^3.8.1",
    "bcrypt": "^5.0.1",
    "chalk": "4.1.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "express-graphql": "^0.12.0",
    "googleapis": "^100.0.0",
    "graphql": "^16.5.0",
    "graphql-import-node": "^0.0.5",
    "graphql-merge-resolvers": "^1.1.16",
    "graphql-playground-middleware-express": "^1.7.23",
    "graphql-tools": "^8.2.11",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^4.6.0",
    "ncp": "^2.0.0",
    "nodemailer": "^6.7.5",
    "slugify": "^1.6.5",
    "typescript": "^4.7.2"
  },
  "devDependencies": {
    "@graphql-tools/load-files": "^6.5.3",
